<?xml version="1.0" encoding="utf-8"?> 
<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
    
    <item android:state_pressed="true"> 
        <shape>
            <!-- 纯色 -->
            <solid 
                android:color="#57B345"/>
            <!-- 文字距离边框 -->
            <padding 
                android:left="3dp"
                android:right="3dp"
                android:bottom="3dp"
                android:top="3dp"/> 
        </shape>
    </item>
    <item android:state_focused="true"> 
        <shape>
            <!-- 纯色 -->
            <solid 
                android:color="#57B345"/>
            <!-- 文字距离边框 -->
            <padding 
                android:left="3dp"
                android:right="3dp"
                android:bottom="3dp"
                android:top="3dp"/>
        </shape>
    </item>
    <item >
        <shape>
            <!-- 纯色 -->
            <solid 
                android:color="@null"/>
            <!-- 文字距离边框 -->
            <padding 
                android:left="3dp"
                android:right="3dp"
                android:bottom="3dp"
                android:top="3dp"/>
        </shape>
	</item>
</selector> 